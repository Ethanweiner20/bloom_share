<div class="container py-3">
  <div class="row gy-3">
    <%== erb :'components/pagination', layout: nil, locals: { :page => @page } %>
  </div>
  <% if @plants_storage.length > 0 %>
    <div class="row gy-3">
      <% @plants_storage.each do |plant| %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
          <div class="card bg-light h-100">
            <a href="/plants/<%= plant.id %>" >
              <div class="card-body">
                <%# Color Based on Flower Color %>
                <h5 class="card-title text-success"><%= plant["common_name"] %></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  <%= plant["scientific_name"] %>
                </h6>
                <%== erb :'components/plant_metadata', layout: nil, locals: { :plant => plant } %>
              </div>
              <% if plant.image_src %>
                <img class="card-img" src="<%= plant.image_src %>" alt="Plant Image" />
              <% end %>
            </a>
            <% if session.key?(:user) %>
              <div class="card-footer">
                <%== erb(:'forms/quantity_form', layout: nil, locals: { plant: plant }) %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <% if @plants_storage.length >= 4 %>
      <div class="my-3">
        <%== erb :'components/pagination', layout: nil, locals: { :page => @page } %>
      </div>
    <% end %>
  <% else %>
    <h1 class="text-muted lead text-center mb-3">No plants found.</h1>
    <% if request.path == '/inventory' %>
      <a href="/plants">
        <p class="text-center">
          Add a new plant here.
        </p>
      </a>
    <% end %>
  <% end %>
</div>
