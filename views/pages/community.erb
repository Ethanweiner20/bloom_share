<div class="inventories-list container p-3">
  <form class="plant-search" action="<%= request.path %>" method="get">
    <input type="hidden" name="page" value="1">
    <div class="row gy-3 mb-2">
      <div class="col-md-4 col-12">
        <label for="inventory_name">Inventory Name</label>
        <input type="text" name="inventory_name" id="inventory_name" class="form-control" placeholder="Inventory name" value="<%= params["inventory_name"] %>" />
      </div>
      <div class="col-md-4 col-12">
        <label for="owner_name">Inventory Owner</label>
        <input type="text" name="owner_name" id="owner_name" class="form-control" placeholder="Owner name" value="<%= params["owner_name"] %>" />
      </div>
      <div class="col-md-4 col-12">
        <label for="username">Minimum Species</label>
        <input type="number" name="min_plants" id="min_plants" class="form-control" placeholder="10" value="<%= params["min_plants"] %>" />
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-8">
        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-search" viewBox="0 0 25 25">
              <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
            Search
            <div class="spinner-border mx-2" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </button>
        </div>
      </div>
      <div class="col-4">
        <div class="d-grid gap-2">
          <button type="reset" class="btn btn-warning">
            Reset Filters
          </button>
        </div>
      </div>
    </div>
  </form>
  <div class="list-group mx-auto mt-3">
    <% @inventories_list.each do |inventory| %>
      <a href="/inventories/<%= inventory.id %>?page=1"
         class="list-group-item list-group-item-action d-flex justify-content-between align-items-start"
      >
        <div class="ms-2 me-auto">
          <div class="fw-bold"><%= inventory.name %></div>
          <span class="fst-italic">User:</span>
          <%= inventory.username %>
        </div>
        <span class="badge bg-primary rounded-pill mx-1"><%= inventory.num_species %> species</span>
        <span class="badge bg-secondary rounded-pill mx-1"><%= inventory.total_quantity %> total plants</span>
      </a>
    <% end %>
  </div>
</div>
