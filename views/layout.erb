    <%# Content %>
    <main>
      <% if session.key?(:error) %>
        <div class="alert alert-danger" role="alert">
          <%= session.delete(:error) %>
        </div>
      <% end %>
      <% if @title %>
        <div class="py-4 text-center">
          <p class="h2 text-dark">
            <%= @title %>
          </p>
          <p class="lead mx-4"><%= @subtitle %></p>
        </div>
      <% end %>
      <%== yield %>
    </main>
