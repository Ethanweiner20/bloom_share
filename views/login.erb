<div class="d-flex align-items-center full-height">
  <div class="p-5 container restrained-container bg-light">
    <h1 class="display-6 text-success">Log In</h1>
    <form action="/login" method="post" class="py-3">
      <div class="mb-3">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="admin" value="<%= @username %>" />
      </div>
      <div class="mb-3">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Password1234" />
      </div>
      <button type="submit" class="btn btn-success">Log In</button>
    </form>
    <a class="text-success" href="/signup">Need an account? Sign up here.</a>
    <p class="text-muted fst-italic mt-2 mb-0">To experiment without signing up, use username 'admin' and password 'Password1234'</p>
  </div>
</div>
